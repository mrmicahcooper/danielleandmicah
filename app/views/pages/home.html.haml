  %a#rsvp.in-page-link
  %section.rsvp.rsvp-2
    .container
      .row
        .col-sm-12.text-center
          %h1 Say you'll be there
          %p
            Please let us know if you can make it by
            %br
            February 1st at the latest, please!
      .row
        .col-sm-12.text-center
          .form-wrapper
            = form_for(reservation, class: :form_email) do |f|
              .form-section
                = f.text_field :name, placeholder: "Name", class: "validate-required"
                .radio-group
                  .radio-holder.btn.checked
                    %span Can't Wait
                    %input{:checked => "checked", :name => "attending", :type => "radio", :value => "true"}
                  .radio-holder.btn
                    %span Can't Come
                    %input{:name => "attending", :type => "radio", :value => "false"}
              .form-section
                %h6 Meal Preference
                .radio-group
                  .radio-holder.naked.checked
                    %span Chicken
                    %input{:name => "meal_preference", :type => "radio", :value => "chicken"}
                  .radio-holder.naked
                    %span Beef
                    %input{:name => "meal_preference", :type => "radio", :value => "beef"}
              .form-section
                %h6 Contact (for a reminder)
                = f.text_field :email, placeholder: :email
                = f.text_field :phone, placeholder: :phone
              %input{:type => "submit", :value => "RSVP"}
                .form-error
                  %span Please fill out all fields
                .form-success
                  %span Thanks for your RSVP!
